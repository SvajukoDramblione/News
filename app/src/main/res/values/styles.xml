<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/amita</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ListItem">
        <item name="android:elevation">@dimen/elevation_size</item>
        <item name="android:background">@drawable/rounded_corners_white_bg</item>
        <item name="android:layout_margin">@dimen/list_item_margin</item>
    </style>

</resources>